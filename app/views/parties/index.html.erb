<h1>Listing parties</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Chairman</th>
    <th>Assembly leader</th>
    <th>Founded on</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parties.each do |party| %>
  <tr>
    <td><%= party.name %></td>
    <td><%= party.chairman_id %></td>
    <td><%= party.assembly_leader_id %></td>
    <td><%= party.founded_on %></td>
    <td><%= link_to 'Show', party %></td>
    <td><%= link_to 'Edit', edit_party_path(party) %></td>
    <td><%= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

